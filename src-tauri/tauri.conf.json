{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NeuraL Translator",
  "version": "0.1.0",
  "identifier": "com.agiletec.neural-translator",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "NeuraL Translator",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "AI-powered translation desktop app",
    "longDescription": "NeuraL Translator is an AI-powered desktop translation application that provides real-time translation using local Ollama models.",
    "copyright": "Â© 2024 AgileTech"
  }
}
